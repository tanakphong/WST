<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?colorbg"
    tools:context="com.wf.demo.wfv30.MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/MainText"
            style="?ptextmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/SpaceRow"
            android:text="@string/TPCancel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="?pbg"
            android:paddingBottom="@dimen/Space"
            android:paddingTop="@dimen/Space">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView"
                            style="?text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="@string/PCardNo"
                            android:textAlignment="textEnd" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <EditText
                            android:id="@+id/CardNo"
                            style="?edittext"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.47"
                            android:ems="10"
                            android:nextFocusDown="@+id/Submit"
                            android:selectAllOnFocus="true"
                            android:inputType="text" />

                        <ImageButton
                            android:id="@+id/CheckCard"
                            style="?button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.08"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/check" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/Space"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            style="?text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="@string/PCancelAmt"
                            android:textAlignment="textEnd" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05" />

                        <EditText
                            android:id="@+id/Amount"
                            style="?text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.47"
                            android:ems="10"
                            android:inputType="text"
                            android:textAlignment="textEnd"
                            android:enabled="false"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.08" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6" />

            <Button
                android:id="@+id/Cancel"
                style="?button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/SpaceRow"
                android:layout_marginRight="@dimen/SpaceRow"
                android:layout_marginTop="@dimen/SpaceRow"
                android:layout_weight="0.2"
                android:text="@string/Cancel" />

            <Button
                android:id="@+id/Submit"
                style="?button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/SpaceRow"
                android:layout_marginTop="@dimen/SpaceRow"
                android:layout_weight="0.2"
                android:text="@string/Submit" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>